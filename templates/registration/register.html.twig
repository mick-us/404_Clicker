{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <form class="form-container" method="post">
        <div class="form-content">
            {# {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %} #}

            <h1 class="h3 mb-3 font-weight-normal">Inscription</h1>
            <div class="form-field">
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ '' }}" name="email" id="inputEmail" class="form-control" required autofocus>
            </div>
            <div class="form-field">
                <label for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" required>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            </div>
            {# <div class="">
                <checkbox for="">Agree terms</checkbox>
                <input type="" name="" id="" class="" required>
            </div> #}
            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html
            
                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}
        </div>
        <div class="">
            <checkbox for="checkTerms">Agree terms</checkbox>
            <input type="checkbox" value="{{ '' }}" name="checkbox" id="checkTerms" class="form-checkbox" required>
        </div><br />
        <div class="form-links">
            <button class="btn btn-lg" type="submit">
                Inscription
            </button>
        </div>
    </form>
    
    {# {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn">Inscription</button>
    {{ form_end(registrationForm) }} #}
{% endblock %}
